<%- include('partials/header')%>

<div class="col-md-4 offset-md-4">
    <h2 class="text-center">Escribe una nueva entrada</h2>

    <form method="post" action="/new-entry">
        <div class="form-group">
            <label for="title">Title</label>
            <input type="text" name="title" id="title" class="form-control" placeholder="Ingresar un nuevo titulo" required>
        </div>

        <div class="form-group">
            <label for="body">Entrada texto</label>
            <textarea name="body" id="body" class="form-control"  rows="3" required></textarea>
        </div>

        <div class="form-group">
            <input type="submit" value="Post Entry" class=" mt-3 btn btn-primary">
        </div>
    </form>
</div>

<%- include('partials/footer')%>